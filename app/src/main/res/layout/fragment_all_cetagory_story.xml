          android:layout_marginBottom="@dimen/_4sdp"
          android:orientation="vertical"
          app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
          app:spanCount="2"
          tools:listitem="@layout/all_storys_cetagory" />


