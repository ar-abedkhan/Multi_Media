<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c2"
    tools:context=".Fragment.ReadStoryFragment">


    <!--    -->
    <!--    zeshan vai ata hocche story porar j page oita -->
    <!--    mane post ba recycler theke j page ta open hobe oita.........-->
    <!--    -->
    <!--    -->


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Story Name"
            app:contentScrim="@color/c2"
            android:background="@color/c2"
            android:id="@+id/collapsingToolbar"
            >


            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="center"
                android:layout_gravity="center|end"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_collapseMode="parallax"
                />


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/toolbar"
                />



        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/storyback"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/writerProfileImg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                app:civ_border_color="@color/c2"
                app:civ_border_width="@dimen/_1sdp"
                android:src="@drawable/person1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:text="Abed khan"
                app:layout_constraintStart_toEndOf="@id/writerProfileImg"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/writerName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:text="Devoloper"
                app:layout_constraintStart_toEndOf="@id/writerProfileImg"
                app:layout_constraintTop_toBottomOf="@id/writerName"
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/writerProfession"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="the srtory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will here"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/writerProfileImg"
                android:layout_marginStart="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/mainStory"
                />







            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mainStory"
                android:orientation="horizontal"
                android:weightSum="3"
                >






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    >
                    <ImageView
                        android:visibility="visible"
                        android:paddingTop="@dimen/_2sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/favorite_border"
                        android:id="@+id/post_NON_React"
                        />

                    <ImageView
                        android:visibility="gone"
                        android:paddingTop="@dimen/_2sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/favorite"
                        android:id="@+id/post_Reacted"
                        />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/_3sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:text="17"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:id="@+id/postReactCount"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_6sdp"
                    >
                    <ImageView
                        android:paddingTop="@dimen/_2sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/comment"
                        android:id="@+id/postComment"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/_3sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:text="10"
                        android:textColor="@color/black_text"
                        android:id="@+id/postCommentCount"
                        />


                </LinearLayout>



                <LinearLayout
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/_3sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:text="Share"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:id="@+id/postShear"
                        />

                    <ImageView
                        android:paddingTop="@dimen/_2sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:paddingStart="@dimen/_3sdp"
                        android:src="@drawable/share_icon"
                        android:rotation="-20"
                        />
                    <!--            android:src="@drawable/share"-->
                    <!--            TODO: SHARE image ekta extra ache, oita delete korte hobe-->


                </LinearLayout>






            </LinearLayout>























        </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shop3"
        android:baselineAlignBottom="false"
        android:clickable="true"
        app:rippleColor="@color/c1"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="end|bottom"
        android:backgroundTint="@color/c2"
        android:layout_marginEnd="@dimen/_10sdp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>