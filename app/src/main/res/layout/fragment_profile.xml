<com.getbase.floatingactionbutton.FloatingActionsMenu
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="@dimen/_13sdp"
    app:fab_expandDirection="up"
    app:fab_labelsPosition="left"
    app:fab_addButtonColorNormal="@color/c1"
    app:fab_addButtonColorPressed="@color/c2"
    android:animateLayoutChanges="true"
    >


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorDisabled="@color/white"
        app:fab_size="mini"
        app:fab_icon="@drawable/comment"
        android:id="@+id/message"
        app:fab_colorNormal="@color/c1"
        app:fab_colorPressed="@color/c2"
        app:fab_title="Message Me"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorDisabled="@color/white"
        app:fab_size="mini"
            app:fab_colorNormal="@color/c1"
            app:fab_colorPressed="@color/c2"
        app:fab_icon="@drawable/ic_baseline_settings_24"
        android:id="@+id/settings"
        app:fab_title="Settings"
        />


        <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorDisabled="@color/white"
        app:fab_size="mini"
        app:fab_icon="@drawable/write"
            app:fab_colorNormal="@color/c1"
            app:fab_colorPressed="@color/c2"
        android:id="@+id/addPost"
        app:fab_title="Add Post"
        />





</com.getbase.floatingactionbutton.FloatingActionsMenu>


