<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/scqure_back"
    android:layout_margin="@dimen/_7sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:elevation="@dimen/_8sdp"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottommenu_background">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/travel1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/UserProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/pattaya"
            android:text="Abed khan"
            android:textAlignment="center"
            android:textColor="@color/c1"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profileImg"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:id="@+id/followTheWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/pattaya"
            android:text="Follow"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />






        <TextView
            android:id="@+id/postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="12 feb 2023"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:paddingStart="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@id/profileImg"
            app:layout_constraintTop_toBottomOf="@id/UserProfileName"
            />

        <TextView
            android:id="@+id/postStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:includeFontPadding="false"
            android:text="Story title name"
            android:fontFamily="@font/poppins"
            android:textAlignment="viewStart"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImg" />



        <ImageView
            android:layout_margin="@dimen/_8sdp"
            android:id="@+id/postImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/travel1"
            app:layout_constraintTop_toBottomOf="@id/postStoryTitle"
            />


        <TextView
            android:id="@+id/main_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:maxLines="4"
            android:ellipsize="end"

            android:text="Multi MediaMulti MediaMulti MediaMulti MediaMulti MediaMui MediaMulti MediaMulti MediaMui MediaMulti MediaMulti MediaMui MediaMulti MediaMulti MediaMulti MediaMulti MediaMulti MediaMulti Media"
            android:textAlignment="viewStart"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postImg" />


        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Read more"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintTop_toBottomOf="@id/main_story"
            app:layout_constraintEnd_toEndOf="parent"
            />




        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/more"
            app:layout_constraintStart_toStartOf="parent"

            android:orientation="horizontal"
            android:weightSum="3"
            >






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                >
                <ImageView
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/favorite"
                    android:id="@+id/postReact"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_3sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:text="17"
                    android:textColor="@color/black_text"
                    android:id="@+id/postReactCount"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_6sdp"
                >
                <ImageView
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/comment"
                    android:id="@+id/postComment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_3sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:text="10"
                    android:textColor="@color/black_text"
                    android:id="@+id/postCommentCount"
                    />


            </LinearLayout>









        </LinearLayout>


        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_3sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/_3sdp"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:text="Share"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="@color/black_text"
                android:id="@+id/postShear"
                />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/share_icon"
                android:rotation="-20"
                />
<!--            android:src="@drawable/share"-->
<!--            TODO: SHARE image ekta extra ache, oita delete korte hobe-->


        </LinearLayout>









    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>