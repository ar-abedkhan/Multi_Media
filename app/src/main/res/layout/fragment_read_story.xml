<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/readStoryFragment"
    tools:context=".Fragment.ReadStoryFragment"
        >





        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="@color/white_background"
                android:id="@+id/appbar"
                >


                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                    app:title="Story Name"
                    android:textAlignment="viewStart"
                    android:tooltipText="by abed and Zeshan "
                    app:collapsedTitleTextColor="@color/black_text"
                    app:contentScrim="@color/bottommenu_background"
                    app:expandedTitleTextColor="@color/c1"
                    >
<!--                    app:contentScrim="@color/bottommenu_background"-->


                    <ImageView
                        android:id="@+id/postImg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/travel1"
                        />


<!--                    <androidx.appcompat.widget.Toolbar-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/_45sdp"-->
<!--                        android:id="@+id/toolbar"-->
<!--                        />-->



                </com.google.android.material.appbar.CollapsingToolbarLayout>


                <TextView
                    android:id="@+id/storyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Writers link post title"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold"

                    />


            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

<!--                    android:background="@drawable/storyback"-->


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/writerProfileImg"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        app:civ_border_color="@color/view_color"
                        app:civ_border_width="@dimen/_1sdp"
                        android:src="@drawable/person1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_15sdp"
                        android:text="Writers name"
                        android:singleLine="true"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        app:layout_constraintStart_toEndOf="@id/writerProfileImg"
                        app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:id="@+id/writerName"
                        />






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_10sdp"
                        android:text="12 feb 2023"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/writerName"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/postTime"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_13sdp"
                        android:text="Engineer"
                        app:layout_constraintStart_toEndOf="@id/writerProfileImg"
                        app:layout_constraintTop_toBottomOf="@id/writerName"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:id="@+id/profession"
                        />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_15sdp"
                        android:text="the srtory will herertory will herertoryry will herertoryry will herertoryry will herertoryry will herertoryry will herertoryry will herertoryry will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will herertory will here"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/writerProfileImg"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:id="@+id/mainStory"
                        />


                    <!--like comment and shear setup-->

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mainStory"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >






                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"

                            >
                            <!--    TODO: vai ekhane    love er 2ta image disi 1tared jeta kew click korle visivle hobe naile default black white ta thakbe             -->

                            <ImageView
                                android:visibility="visible"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/favorite_border"
                                android:id="@+id/post_non_React"
                                />

                            <ImageView
                                android:visibility="gone"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/favorite"
                                android:id="@+id/post_Reacted"
                                />




                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingStart="@dimen/_3sdp"
                                android:gravity="center"
                                android:textSize="@dimen/_13sdp"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/black_text"
                                android:id="@+id/postReactCount"
                                />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_6sdp"
                            >
                            <ImageView
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/comment"
                                android:id="@+id/postComment"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingStart="@dimen/_3sdp"
                                android:gravity="center"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:text="10"
                                android:textColor="@color/black_text"
                                android:id="@+id/postCommentCount"
                                />


                        </LinearLayout>



                        <LinearLayout
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingEnd="@dimen/_3sdp"
                                android:gravity="center"
                                android:textSize="@dimen/_13sdp"
                                android:text="Share"
                                android:textStyle="bold"
                                android:textColor="@color/black_text"
                                android:id="@+id/postShear"
                                />

                            <ImageView
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:paddingStart="@dimen/_3sdp"
                                android:src="@drawable/share_icon"
                                android:rotation="-20"
                                />

                        </LinearLayout>






                    </LinearLayout>



                    <View
                        android:id="@+id/layout2"
                        app:layout_constraintTop_toBottomOf="@id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/view_color"
                        />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text="Comments"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout2"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:id="@+id/comment_title"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/comment_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/_8ssp"
                        android:paddingBottom="@dimen/_100sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/comment_title"
                        tools:layout_editor_absoluteX="0dp"
                        tools:listitem="@layout/comment_design" />





<!--comment layout......-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/comment_recycler"
                        android:id="@+id/commentLayout"
                        android:background="#D7595C60"
                        android:padding="@dimen/_4sdp"
                        >

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:hint="Share your feedback"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:textCursorDrawable="@drawable/write"
                            android:maxHeight="@dimen/_100sdp"
                            android:maxLines="5"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColorHint="@color/black_text"
                            android:paddingEnd="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@drawable/background"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintEnd_toStartOf="@id/commentSubmitBtn"
                            android:inputType="textMultiLine"
                            android:id="@+id/commentBox"
                            />




                        <ImageView
                            android:background="@drawable/comment_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:src="@android:drawable/ic_menu_send"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:paddingStart="@dimen/_8sdp"
                            android:id="@+id/commentSubmitBtn"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

















                 <View
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_60sdp"
                     app:layout_constraintTop_toBottomOf="@id/commentLayout"
                     android:background="@color/bottommenu_background"
                     />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>